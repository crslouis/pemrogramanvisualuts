@model List<GrandLineBooks.Models.Service>
@{
    ViewData["Title"] = "Kelola Layanan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="admin-card-header">
        <h4><i class="fas fa-bubbles"></i> Daftar Layanan</h4>
        <a asp-action="CreateBook" class="btn btn-admin-primary">
            <i class="fas fa-plus"></i> Tambah Layanan Baru
        </a>
    </div>
    
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Belum ada layanan. Tambahkan layanan pertama Anda!
        </div>
    }
    else
    {
        <div class="admin-table">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Cover</th>
                        <th>Judul</th>
                        <th>Penulis</th>
                        <th>Kategori</th>
                        <th>Harga</th>
                        <th>Stok</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(book.ImageUrl))
                                {
                                    <img src="@book.ImageUrl" alt="Cover" style="width: 50px; height: 70px; object-fit: cover; border-radius: 5px;">
                                }
                                else
                                {
                                    <div style="width: 50px; height: 70px; background: #ddd; border-radius: 5px; display: flex; align-items: center; justify-content: center;">
                                        <i class="fas fa-shirt"></i>
                                    </div>
                                }
                            </td>
                            <td><strong>@book.Title</strong><br><small class="text-muted">ISBN: @book.ISBN</small></td>
                            <td>@book.Author</td>
                            <td><span class="badge bg-info">@book.Category</span></td>
                            <td><strong>Rp @book.Price.ToString("N0")</strong></td>
                            <td>
                                @if (book.Stock > 10)
                                {
                                    <span class="badge bg-success">@book.Stock</span>
                                }
                                else if (book.Stock > 0)
                                {
                                    <span class="badge bg-warning">@book.Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Habis</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="DeleteBook" asp-route-id="@book.Id" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus buku ini?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>