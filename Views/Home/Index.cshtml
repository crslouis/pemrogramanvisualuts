@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MarshaLaundryDb - Layanan Laundry Online</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --laundry-deep: #0d2b45;
            --laundry-blue: #136fbd;
            --laundry-teal: #2aa9a1;
            --laundry-foam: #e6f7ff;
            --laundry-white: #ffffff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--laundry-foam);
            overflow-x: hidden;
            height: 100%;
            width: 100%;
        }

        /* Navbar */
        .navbar-custom {
            background: linear-gradient(90deg, var(--laundry-blue) 0%, var(--laundry-teal) 100%);
            padding: 15px 0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
            border-bottom: 3px solid rgba(255,255,255,0.25);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--laundry-white) !important;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
            margin: 0 10px;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: var(--laundry-white) !important;
        }

        .btn-nav {
            margin: 0 5px;
            padding: 8px 20px;
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-login {
            background: transparent;
            border: 2px solid var(--laundry-white);
            color: var(--laundry-white);
        }

        .btn-login:hover {
            background: var(--laundry-white);
            color: var(--laundry-blue);
        }

        .btn-register {
            background: linear-gradient(135deg, var(--laundry-teal) 0%, var(--laundry-blue) 100%);
            border: 2px solid rgba(255,255,255,0.6);
            color: white;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(19, 111, 189, 0.4);
        }

        /* Hero Section - FULL BLACK */
        .hero-section {
            background: linear-gradient(180deg, #f8fdff 0%, #e6f7ff 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 80px 20px;
        }

        .hero-icon {
            font-size: 6rem;
            color: var(--laundry-blue);
            margin-bottom: 30px;
            animation: floatAnimation 3s ease-in-out infinite;
        }

        @@keyframes floatAnimation {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: bold;
            color: var(--laundry-deep);
            margin-bottom: 20px;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.7);
        }

        .hero-subtitle {
            font-size: 1.3rem;
            color: var(--laundry-blue);
            margin-bottom: 40px;
        }

        .hero-buttons .btn {
            margin: 10px;
            padding: 15px 40px;
            font-size: 1.1rem;
            border-radius: 30px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .btn-hero-primary {
            background: linear-gradient(135deg, var(--laundry-teal) 0%, var(--laundry-blue) 100%);
            color: white;
            border: 2px solid rgba(255,255,255,0.6);
        }

        .btn-hero-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(19, 111, 189, 0.35);
            color: white;
        }

        .btn-hero-secondary {
            background: transparent;
            color: var(--laundry-blue);
            border: 2px solid var(--laundry-blue);
        }

        .btn-hero-secondary:hover {
            background: var(--laundry-blue);
            color: var(--laundry-white);
        }

        /* Features Section */
        .features-section {
            padding: 80px 20px;
            background: var(--laundry-foam);
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--laundry-blue);
            text-align: center;
            margin-bottom: 60px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        .feature-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            height: 100%;
            border: 3px solid rgba(19, 111, 189, 0.15);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(19, 111, 189, 0.2);
            border-color: var(--laundry-blue);
        }

        .feature-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            color: var(--laundry-blue);
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--laundry-deep);
            margin-bottom: 15px;
        }

        .feature-desc {
            color: #4a4a4a;
            line-height: 1.6;
        }

        /* Footer */
        .footer {
            background: linear-gradient(90deg, var(--laundry-blue) 0%, var(--laundry-teal) 100%);
            color: white;
            padding: 40px 20px 20px;
            border-top: 4px solid rgba(255,255,255,0.25);
        }

        .footer-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--laundry-white);
            margin-bottom: 10px;
        }

        .footer-text {
            color: #eaf7ff;
            margin-bottom: 20px;
        }

        .footer-links a {
            color: white;
            margin: 0 15px;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-links a:hover {
            color: var(--laundry-white);
        }

        .footer-bottom {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.3);
            color: #999;
        }

        .footer-quote {
            color: #eaf7ff;
            font-style: italic;
            margin-top: 10px;
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2rem;
            }

            .hero-subtitle {
                font-size: 1rem;
            }

            .section-title {
                font-size: 1.8rem;
            }
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-soap"></i> MarshaLaundryDb
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">Beranda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Customer" asp-action="Catalog">Layanan</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Tentang</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-nav btn-login">
                        <i class="fas fa-sign-in-alt"></i> Masuk
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-nav btn-register">
                        <i class="fas fa-user-plus"></i> Daftar
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section" id="home">
        <div class="text-center">
            <div class="hero-icon">
                <i class="fas fa-jug-detergent"></i>
            </div>
            <h1 class="hero-title">✨ Selamat Datang di MarshaLaundryDb ✨</h1>
            <p class="hero-subtitle">
                Layanan laundry cepat, bersih, wangi, dan rapi. Antar-jemput tersedia!
            </p>
            <div class="hero-buttons">
                <a asp-controller="Customer" asp-action="Catalog" class="btn btn-hero-primary">
                    <i class="fas fa-bubbles"></i> Lihat Layanan
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-hero-secondary">
                    <i class="fas fa-user-plus"></i> Daftar Sekarang
                </a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section" id="features">
        <div class="container">
            <h2 class="section-title">🫧 Kenapa Memilih MarshaLaundryDb? 🫧</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-shirt"></i>
                        </div>
                        <h3 class="feature-title">Paket Lengkap</h3>
                        <p class="feature-desc">
                            Cuci-kering-lipat, setrika, dry clean, sepatu, tas, bed cover, dan lainnya.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-truck-fast"></i>
                        </div>
                        <h3 class="feature-title">Antar-Jemput Cepat</h3>
                        <p class="feature-desc">
                            Kurir siap jemput dan antar pakaian Anda tepat waktu dan aman.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-sparkles"></i>
                        </div>
                        <h3 class="feature-title">Bersih & Wangi</h3>
                        <p class="feature-desc">
                            Detergen premium dan perawatan lembut untuk hasil maksimal yang tahan lama.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <div class="footer-brand">
                <i class="fas fa-soap"></i> MarshaLaundryDb
            </div>
            <p class="footer-text">
                ✨ Pakaian Bersih, Wangi, dan Rapi Setiap Hari ✨
            </p>
            <div class="footer-links">
                <a href="#home">Beranda</a>
                <a asp-controller="Customer" asp-action="Catalog">Layanan</a>
                <a href="#features">Tentang</a>
                <a asp-controller="Account" asp-action="Login">Masuk</a>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 MarshaLaundryDb. All Rights Reserved.</p>
                <p class="footer-quote">
                    "Rapi itu percaya diri — serahkan pada kami!"
                </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>