@model List<GrandLineBooks.Models.Service>
@{
    ViewData["Title"] = "Layanan Laundry";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="row mt-4">
    <div class="col-12">
        <h2><i class="fas fa-bubbles"></i> Layanan Laundry</h2>
        <p class="text-muted">Pilih layanan sesuai kebutuhan: cuci kering lipat, setrika, dry clean, dan lainnya.</p>
    </div>
</div>

<!-- Search & Filter -->
<div class="row mb-4">
    <div class="col-md-8">
        <form method="get" asp-action="Catalog" class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Contoh: baju, celana, selimut, jaket, bed cover, sepatu" value="@ViewBag.SearchQuery">
            <button type="submit" class="btn btn-pirate">
                <i class="fas fa-search"></i> Cari
            </button>
        </form>
    </div>
    <div class="col-md-4">
        <select class="form-control" onchange="window.location.href='/Customer/Catalog?category=' + this.value">
            <option value="">Semua Kategori</option>
            @foreach (var cat in ViewBag.Categories)
            {
                <option value="@cat" selected="@(ViewBag.SelectedCategory == cat)">@cat</option>
            }
        </select>
    </div>
</div>

<!-- Services Grid -->
@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Tidak ada layanan ditemukan.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var book in Model)
        {
            <div class="col-md-3">
                <div class="card h-100 book-card">
                    @if (!string.IsNullOrEmpty(book.ImageUrl))
                    {
                        <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 300px; object-fit: cover;">
                    }
                    else
                    {
                        <div style="height: 300px; background: linear-gradient(135deg, #7bd0ff 0%, #2aa9a1 100%); display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-shirt fa-5x text-white"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <span class="badge bg-info mb-2 align-self-start">@book.Category</span>
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text text-muted mb-2">
                            <small><i class="fas fa-user"></i> @book.Author</small>
                        </p>
                        <p class="card-text flex-grow-1">
                            @(book.Description.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description)
                        </p>
                        <div class="mt-auto">
                            <h4 class="text-success mb-3">Rp @book.Price.ToString("N0")</h4>
                            @if (book.Stock > 0)
                            {
                                <div class="d-grid gap-2">
                                    <a asp-action="BookDetail" asp-route-id="@book.Id" class="btn btn-pirate">
                                        <i class="fas fa-eye"></i> Lihat Detail
                                    </a>
                                </div>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="fas fa-times"></i> Stok Habis
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
.book-card {
    transition: all 0.3s ease;
    border: 2px solid rgba(19,111,189,0.2);
}

.book-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}
</style>